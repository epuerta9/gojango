# Environment configuration for {{.Name}}
# Copy this file to .env and customize for your environment

# Application Settings
DEBUG=true
PORT=8080
SECRET_KEY=your-secret-key-here

# Database Configuration
{{- if eq .Database "postgres"}}
DATABASE_URL=postgres://postgres:postgres@localhost:5432/{{.Name}}_dev?sslmode=disable
{{- else if eq .Database "mysql"}}
DATABASE_URL=mysql://mysql:mysql@tcp(localhost:3306)/{{.Name}}_dev
{{- else}}
DATABASE_URL=sqlite3://./data/{{.Name}}.db
{{- end}}

{{- if or (has .Features "redis") (has .Features "cache")}}
# Cache Configuration
REDIS_URL=redis://localhost:6379/0
{{- end}}

{{- if has .Features "auth"}}
# Authentication Settings
JWT_SECRET=your-jwt-secret-here
SESSION_SECRET=your-session-secret-here
{{- end}}

{{- if has .Features "email"}}
# Email Configuration
EMAIL_BACKEND=console  # console, smtp, sendgrid
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SENDGRID_API_KEY=
{{- end}}

# External Services
{{- if has .Features "s3"}}
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
S3_BUCKET_NAME={{.Name}}-media
{{- end}}

# Development Settings
GOJANGO_DEBUG=1
LOG_LEVEL=debug

# Production Settings (uncomment for production)
# DEBUG=false
# LOG_LEVEL=info
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com